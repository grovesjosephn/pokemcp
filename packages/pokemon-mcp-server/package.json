{
  "name": "pokemon-mcp-server",
  "version": "1.0.0",
  "description": "Pokemon MCP Server - Comprehensive Pokemon data through Model Context Protocol",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "pokemon-mcp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch server.ts",
    "start": "tsx server.ts",
    "test": "tsx test-server.ts",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:",
    "better-sqlite3": "catalog:"
  },
  "devDependencies": {
    "@types/better-sqlite3": "catalog:",
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "mcp",
    "pokemon",
    "server",
    "model-context-protocol",
    "ai-tools"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  },
  "mcp": {
    "server": {
      "command": "tsx",
      "args": [
        "server.ts"
      ],
      "env": {}
    }
  }
}
