{
  "name": "pokemon-mcp-server",
  "version": "1.0.0",
  "description": "Pokemon MCP Server - Comprehensive Pokemon data through Model Context Protocol",
  "main": "server.ts",
  "type": "module",
  "bin": {
    "pokemon-mcp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch server.ts",
    "start": "tsx server.ts",
    "inspect": "npx @modelcontextprotocol/inspector tsx server.ts",
    "inspect:cli": "npx @modelcontextprotocol/inspector --cli tsx server.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:run": "vitest --run",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "pnpm build",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:",
    "better-sqlite3": "catalog:"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "catalog:",
    "@types/better-sqlite3": "catalog:",
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "mcp",
    "pokemon",
    "server",
    "model-context-protocol",
    "ai-tools"
  ],
  "mcp": {
    "server": {
      "command": "tsx",
      "args": [
        "server.ts"
      ],
      "env": {}
    }
  }
}
